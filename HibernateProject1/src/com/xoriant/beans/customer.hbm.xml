<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 5.3//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-5.3.dtd"> 

 <hibernate-mapping package="com.xoriant.beans">
    <class name="Customer" table="customer_data">
       <id name="customer_Id" column="customerId">
          <generator class="increment"></generator>
       </id>
       <property name="customerName" column="customer_name"></property>
       <property name="customerAddress" column="customer_address"></property>
    </class>
 </hibernate-mapping>